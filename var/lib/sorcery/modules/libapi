    debug "libapi" "devoke_installwatch - $*"
    real_devoke_installwatch "$@"
}

#---------------------------------------------------------------------
## @Type API
## @See <@function var.lib.sorcery.modules.libtrack.html,real_devoke_stage_root> for more details.
